FROM node:18

# Define o diretório de trabalho
WORKDIR /app

# Copia apenas os arquivos de dependência
COPY package*.json ./

# Instala dependências
RUN npm install

# (Não copie o restante do código — o bind mount vai cuidar disso!)

# Expor a porta
EXPOSE 3000

# Iniciar com nodemon (instale localmente ou globalmente)
CMD ["npx", "nodemon", "src/server.js"]
